extends ../layouts/nav.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content 
    .container
    form.movie__form(action="/admin/add-movie", method="POST")
        .cell.w5
            h2 Post a new movie
        .cell.w5
            label(for="title") Title
                span *
            input.input__title(type="text", name="title", id="title")
        .cell.w4            
            label(for="imageUrl") Image URL
            input.input__poster(type="text", name="imageUrl", id="imageUrl")
        .cell.w4.not__visible        
            label(for="genres" disabled) Genres
            input.select__genres(type="text", name="genres", id="genres", disabled)
        .cell.w4            
            label(for="homepage") Homepage
            input.input__homepage(type="text", name="homepage", id="homepage")            
        .cell.w4            
            label(for="release") Release date
            input.date__release(type="date", name="release", id="release")
        .cell.w3            
            label(for="language") Language
            input.select__language(type="text", name="language", id="language")
        .cell.w3            
            label(for="duration") Duration
            input.input__duration(type="text", name="duration", id="duration")
        .cell.w3           
            label(for="budget") Budget
            input.input__budget(type="text", name="budget", id="budget")
        .cell.w3           
            label(for="revenue") Revenue
            input.input__budget(type="text", name="budget", id="budget")
        .cell.w5            
            label(for="slogan") Slogan
            textarea.textarea__slogan(rows="2", name="slogan", id="slogan")              
        .cell.w5            
            label(for="description") Description
            textarea.textarea__description(rows="5", name="description", id="description")            
        .cell.w3
            button.btn Submit