extends ../layouts/nav.pug

block styles
    link(rel="stylesheet", href="../css/cards.css")
    link(rel="stylesheet", href="../css/forms.css")

block content    
    form.add-form(action="/admin/add-movie", method="POST")
        .form-control
            label(for="title") Title
            input(type="text", name="title", id="title")
            label(for="poster") Poster link
            input(type="text", name="poster", id="poster")
            label(for="type") Type
            select(name="type")
                option(value='mov') Movie
                option(value="tv") TV Show
        button.btn(type="submit") Add Product