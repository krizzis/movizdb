extends layouts/nav.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content
    .container
        form.signup__form(action="/auth/signup", method="POST")
            input.input__email(type="email", placeholder="e-mail")
            input.input__name(type="text", placeholder="username")
            input.input__password(type="password", placeholder="password")
            input.input__repassword(type="password", placeholder="confirm password")
            button.btn Sign Up
            p.message Already registered? 
                a(href='/auth/login') Sign In


